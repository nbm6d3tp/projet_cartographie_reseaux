<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane maxHeight="-Infinity" styleClass="top-menu-bar" stylesheets="@../../css/top_menu_bar/top_menu_bar_styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.internetcartographier.controller.topmenubar.TopMenuBarController">
    <left>
        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
            <image>
                <Image url="@../../images/internet_cartographier_logo.png" />
            </image>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
        </ImageView>
    </left>
    <padding>
        <Insets bottom="10.0" left="10.0" right="20.0" top="10.0" />
    </padding>
    <right>
        <HBox fx:id="optionsContainer" alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
            <fx:include fx:id="search" source="option/search.fxml">
                <HBox.margin>
                    <Insets top="8.0" />
                </HBox.margin>
            </fx:include>
            <fx:include fx:id="profile" source="option/profile.fxml">
                <HBox.margin>
                    <Insets top="8.0" />
                </HBox.margin>
            </fx:include>
            <fx:include fx:id="notifications" source="option/notifications.fxml">
                <HBox.margin>
                    <Insets top="8.0" />
                </HBox.margin>
            </fx:include>
            <fx:include fx:id="settings" source="option/settings.fxml">
                <HBox.margin>
                    <Insets top="8.0" />
                </HBox.margin>
            </fx:include>
            </children>
        </HBox>
    </right>
</BorderPane>
